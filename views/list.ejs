<%- include("header") -%>

<div class="wrapper">
  <h1 class=""><%= title.charAt(0).toUpperCase() + title.slice(1) %> things ToDo</h1>
  <ul>
    <% items.forEach(item => { %>
        <form action="/delete" method="post">
          <li>
              <span><%= item.name %></span>
              <button value=<%= item.id %> name="delete" type="submit">-</button>
              <input type="hidden" name="listName" value=<%= title %>></input>
          </li>
        </form>
    <%  }) %>
    <li>
      <form class="item" action="/" method="post">
        <input autocomplete="off" autofocus type="text" name="item" onfocusout="this.placeholder='New chore'" onfocus="this.placeholder=''">
        <button type="submit" value=<%= listName %> name="list">+</button>
      </form>
    </li>
  </ul>
</div>

<%- include("footer") -%>
